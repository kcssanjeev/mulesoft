	</email:smtp-config>
	<error-handler name="error-handlingError_Handler" doc:id="5f9ade72-4602-4bfe-94fd-4544f3829840" >
		<on-error-propagate enableNotifications="true" logException="true" doc:name="On Error Propagate" doc:id="31b1ac4e-a51a-49f1-ac5d-d816f4f59c64" type="ANY">
			<logger level="INFO" doc:name="Logger" doc:id="3ec852f7-6440-4ac3-a157-025171e02b53" />
			<ee:transform doc:name="Transform Message" doc:id="845a7e3f-a7dc-4b8f-862d-dc8a779e830b">
			<ee:message>
				<ee:set-payload><![CDATA[%dw 2.0
output application/json
