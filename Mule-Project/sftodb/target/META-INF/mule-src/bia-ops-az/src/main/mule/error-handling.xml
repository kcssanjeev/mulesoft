		</ee:transform>
			<email:send doc:name="Send" doc:id="aa5d22a8-b7fc-4c09-a40c-d4fee73b889f" config-ref="Email_SMTP" fromAddress="satyaraju.mulesoft@gmail.com" subject="Test">
