				<email:to-address value="rindukuri@salesforce.com" />
					<email:to-address value="satyaraju.mulesoft@gmail.com" />
			</email:to-addresses>
			<email:body contentType="text/plain" />
		</email:send>
		</on-error-propagate>
	</error-handler>
</mule>
